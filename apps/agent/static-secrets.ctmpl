{{- $characters := sprig_list "Frodo" "Sam" "Gandalf" "Aragorn" "Legolas" "Gimli" "Boromir" "Sauron" "Saruman" "Gollum" "Treebeard" "TomBom" "Denathor" "Elrond" "Galadriel" "Celeborn" -}}
{{- $randomIndex := sprig_randInt 1 (len $characters) -}}
{{- $randomCharacter := index $characters $randomIndex -}}

{{ with secret "secret/data/brownfield-app-secrets" }}
app.apiKey={{ .Data.data.api_key }}-{{ $randomCharacter }}
app.secretData={{ .Data.data.secret_data }}-{{ $randomCharacter }}
{{ end }}